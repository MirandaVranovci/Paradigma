@model IEnumerable<DataAccess.MEDIAT>
@using eStore.Models
@{
    ViewBag.Title = "Lista e mediave";

}

@{Html.RenderPartial("_Alerts", (object)ViewBag.AlertModel);}

<div class="row margin-bottom-10">
    <div class="col-md-3">
        <a href="@Url.Action("Create","MEDIA")" class="btn btn-primary btn-sm" data-step="1" data-intro="Shtypet butoni dhe hapet forma per regjistrim te mediave ne sistem" data-position="right" data-scrollTo='tooltip'>
            Regjistro
        </a>
    </div>
</div>
<div class="box box-primary">
    <div class="box-body">
        <table class="table table-hover table-responsive datatablessearchable">
            <thead>
                <tr>
                    <th style="text-align:center;">
                        Media
                    </th>
                    <th>
                        Emertimi
                    </th>
                    <th>
                        Ekstenzioni
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    string[] strSplit = item.Pershkrimi.Split('.');
                    string filetype = strSplit[strSplit.Length - 1];

                    <tr>
                        <td>
                            <img class="profile-user-img img-responsive img-circle" style="width:50px;height:50px;" src="@item.Shtegu" alt="@item.Emri">
                                 
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Pershkrimi)
                        </td>
                        <td>
                           @filetype
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}