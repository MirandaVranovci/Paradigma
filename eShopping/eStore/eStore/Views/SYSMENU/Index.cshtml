
@model eStore.Models.SysMenuViewModel
@{
    ViewBag.Title = "Index";
}
<div class="row margin-bottom-10">
    <div class="col-md-3">
        <a href="@Url.Action("CreateAsync","SYSMENU")" class="btn btn-primary btn-sm" data-step="1" data-intro="Regjistrimi i menuve" data-position="right" data-scrollTo='tooltip'>Regjistro</a>
    </div>
</div>
<div class="box box-primary">
    <div class="box-body"> 
        <div class="table table-responsive" id="loadtabela">
            <table class="table table-hover table-responsive datatablessearchable">
                <thead>
                    <tr>
                        <th>
                            Pershkrimi per parent
                        </th>
                        <th>
                            KlasaP
                        </th>
                        <th>
                            Kontrolleri
                        </th>
                        <th>
                            Aksioni
                        </th>
                        <th>
                            Veprimi
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.sys.OrderBy(q => q.ID))
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SYSMENU_PARENT.Pershkrimi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SYSMENU_PARENT.HtmlClass)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Controller)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ActionName)
                            </td>
                            <td>
                            <td>
                                <a href="@Url.Action("Edit","SYSMENU",new { id= item.ID })" style="float:right" title="Modifiko menu" data-step="3" data-intro="Shtypet butoni dhe hapet forma per editim te perdoruesit ne sistem" data-position="right" data-scrollTo='tooltip'><i class="fa fa-edit" style="font-size:1.4em"></i></a>
                            </td>

                        </tr>

                    }
                </tbody>
            </table>
        </div> 
    </div>
</div>

    <script>
        $(function () {

            $('#example1').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>

