@model BusinessLogic.Helpers.Alert
@{
    var alerts = TempData.ContainsKey(BusinessLogic.Helpers.Alert.TempDataKey)
                ? (List<BusinessLogic.Helpers.Alert>)TempData[BusinessLogic.Helpers.Alert.TempDataKey]
                : new List<BusinessLogic.Helpers.Alert>();

    if (alerts.Any())
    {

    }

    foreach (var alert in alerts)
    {
        var dismissableClass = alert.Dismissable ? "alert-dismissable" : null;
        <div class="alert alert-@alert.AlertStyle @dismissableClass">
            @if (alert.Dismissable)
            {
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            }
            @Html.Raw(alert.Message)
        </div>
    }
}
