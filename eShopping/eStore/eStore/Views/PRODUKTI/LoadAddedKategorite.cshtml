@model IEnumerable<DataAccess.PRODUKTI_IN_KATEGORIA>

@{
    Layout = null;
}

<div class="table table-responsive box box-primary" style="box-shadow:3px 3px 3px lightgray;border-right:1px solid lightgray;border-left:1px solid lightgray;border-bottom:1px solid lightgray">
    <div class="box-header with-border">
        Lista e Kategorive te shtuara

    </div>
    <div class="box-body">
        <table class="table table-hover table-condensed table-striped table-responsive">
            <thead>
                <tr>
                    <th>
                        Kategoria
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.KATEGORIA.Emertimi)
                    </td>
                    <td>
                        <button type="button" class="btn btn-danger btn-xs" onclick="deletechosenkategoria(this)" data-id="@item.ID"><i class="fa fa-trash"></i></button>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


}
