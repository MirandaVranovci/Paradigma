@model eStore.Models.ChangePasswordViewModel
@{
    Layout = null;
}
@Scripts.Render("~/bundles/jqueryval")

@using (Html.BeginForm("PasswordReset_POST", "USER", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ID)

    <div class="form-group">

        @Html.LabelFor(m => m.NewPassword, new { @class = "control-label required" })
        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NewPassword, null, new { @class = "text-danger" })

    </div>
    <div class="form-group">

        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label required" })
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">

        <button type="submit" title="Ruaj" class="btn btn-primary btn-sm">
            <i class="fa fa-check"></i>&nbsp; Ruaj
        </button>

    </div>

}
