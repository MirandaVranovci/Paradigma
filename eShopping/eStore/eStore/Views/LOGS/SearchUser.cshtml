@model IEnumerable<DataAccess.PERDORUESI>

@{
    Layout = null;
}
<hr />
<table class="table table-hover table-condensed table-striped table-responsive ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Emri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mbiemri)
            </th>
         
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Emri)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mbiemri)
                </td>
              
                <td>
                    <a onclick="selecteduser(this)" data-id="@item.ID" title="Shfaq" style="float:right">
                        <i class="fa fa-book" style="font-size:1.4em;color:#243B55;cursor:pointer"></i>
                    </a>

                </td>
            </tr>
        }
    </tbody>

</table>
